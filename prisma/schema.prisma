generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Devvit {
  id        Int       @id @default(autoincrement())
  title     String    @db.VarChar(300)
  content   String?
  authorId  String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  // comments  Comment[]
  Comment   Comment[]

  @@index([authorId])
}

model Comment {
  id        Int      @id @default(autoincrement())
  content   String
  authorId  String
  devvitId  Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  devvit    Devvit   @relation(fields: [devvitId], references: [id])

  @@index([authorId])
  @@index([devvitId])
}
